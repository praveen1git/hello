pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh "git clone https://github.com/praveen1git/hello.git"
                sh "cd ./my-app/"
                sh "mvn -Dmaven.test.failure.ignore=true clean package" 
                }
            }
        }
    
        stage('deploy') {
            steps {
                dir("/var/lib/jenkins/workspace/test1/my-app"){
                sh "docker build -t newimage:1.0 ."
                sh "docker run -d -p 80:80 newimage:1.0"
            }
            }
        }

    }
}
