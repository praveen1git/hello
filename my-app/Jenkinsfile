pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir("/var/lib/jenkins/workspace/test-pipeline/my-app"){
                sh "sudo apt-get install openjdk-8-jdk -y"
                sh "mvn -Dmaven.test.failure.ignore=true clean package" 
                }
            }
        }
    
        stage('deploy') {
            steps {
                dir("/var/lib/jenkins/workspace/test-pipeline/my-app"){
                sh "docker build -t newimage:1.0 ."
                sh "docker run -d -p 80:80 newimage:1.0"
            }
            }
        }

    }
}
