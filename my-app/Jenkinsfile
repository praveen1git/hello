pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir("/var/lib/jenkins/workspace/works_free/my-app"){
                }  
                def M2_HOME = tool name: '/opt/apache-maven-3.8.5', type: 'maven'
                sh "${M2_HOME}/bin/mvn -B -DskipTests clean package"
            }
        }
    
        stage('deploy') {
            steps {
                dir("/var/lib/jenkins/workspace/works_free/my-app"){
                sh "docker build -t newimage:1.0 ."
                sh "docker run -d -p 80:80 newimage:1.0"
            }
            }
        }

    }
}
